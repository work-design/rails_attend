<div class="ui top attached borderless menu">
  <div class="header item">Hr Absence Stats</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Hr Absence Stat', new_hr_absence_stat_path, class: 'ui teal button' %>
    </div>
  </div>
</div>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= AbsenceStat.human_attribute_name(:id) %></th>
      <th><%= AbsenceStat.human_attribute_name(:member) %></th>
      <th><%= AbsenceStat.human_attribute_name(:annual_days) %></th>
      <th><%= AbsenceStat.human_attribute_name(:year) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @absence_stats.each do |absence_stat| %>
    <tr>
      <td><%= absence_stat.id %></td>
      <td><%= absence_stat.member.name %></td>
      <td><%= absence_stat.annual_days %></td>
      <td><%= absence_stat.year %></td>
      <td class="ui labels">
        <%#= link_to hr_absence_stat_path(absence_stat), data: { tooltip: t('.show') }, class: 'ui blue mini icon button' do %>
<!--          <i class="location arrow icon"></i>-->
        <%# end %>
        <%= link_to edit_hr_absence_stat_path(absence_stat), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to hr_absence_stat_path(absence_stat), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @absence_stats %>
