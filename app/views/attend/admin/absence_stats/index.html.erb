<%= render 'filter_form' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= AbsenceStat.human_attribute_name(:id) %></th>
      <th><%= AbsenceStat.human_attribute_name(:member) %></th>
      <th><%= AbsenceStat.human_attribute_name(:annual_days) %></th>
      <th><%= AbsenceStat.human_attribute_name(:year) %></th>
      <th>
        <%= link_to new_admin_absence_stat_path, remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.title') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @absence_stats.each do |absence_stat| %>
    <tr>
      <td><%= absence_stat.id %></td>
      <td><%= absence_stat.member.name %></td>
      <td><%= absence_stat.annual_days %></td>
      <td><%= absence_stat.year %></td>
      <td>
        <%#= link_to admin_absence_stat_path(absence_stat), aria: { label: t('.show') }, class: 'ui blue mini icon button' do %>
<!--          <i class="fas fa-eye"></i>-->
        <%# end %>
        <%= link_to edit_admin_absence_stat_path(absence_stat), aria: { label: t('.edit') }, class: 'ui pink mini icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_absence_stat_path(absence_stat), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @absence_stats %>
