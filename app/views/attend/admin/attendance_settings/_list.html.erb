<div class="ui attached segment">
  <%= link_to 'confirm', check_admin_attendance_settings_path, id: 'checked_attendance_setting', method: 'post', class: 'ui big green label' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th>
        <%= AttendanceSetting.human_attribute_name(:id) %>
        <%= check_box_tag :attendance_setting_all, 1, false, onclick: "toggleAll(this, 'attendance_setting_id')", id: nil %>
      </th>
      <th><%= AttendanceSetting.human_attribute_name(:member) %></th>
      <th><%= AttendanceSetting.human_attribute_name(:financial_month) %></th>
      <th><%= AttendanceSetting.human_attribute_name(:on_time) %></th>
      <th><%= AttendanceSetting.human_attribute_name(:state) %></th>
      <th><%= AttendanceSetting.human_attribute_name(:note) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @attendance_settings.each do |attendance_setting| %>
    <tr>
      <td>
        <%= attendance_setting.id %>
        <%= check_box_tag :attendance_setting_id, attendance_setting.id, attendance_setting.approved?, id: nil %>
      </td>
      <td><%= attendance_setting.member.name %></td>
      <td>
        <% if attendance_setting.financial_month %>
          <%= attendance_setting.financial_month.month %>
        <% end %>
      </td>
      <td><%= attendance_setting.on_time %></td>
      <td>
        <span class="ui label"><%= attendance_setting.state_i18n %></span>
      </td>
      <td><%= attendance_setting.note %></td>
      <td class="ui labels">
        <%= link_to admin_attendance_setting_path(attendance_setting), data: { tooltip: t('.show') }, class: 'ui blue mini icon button' do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_attendance_setting_path(attendance_setting), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_attendance_setting_path(attendance_setting), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @attendance_settings %>
