<%= render 'error_messages', target: f.object %>
<div class="field is-horizontal">
  <%= f.label :start_at %>
  <div class="field-body">
    <div class="field is-narrow">
      <%= f.date_field 'start_at(date)', wrap: { input: false, all: false }, label: nil %>
    </div>
    <div class="field is-narrow select">
      <%= f.time_select :start_at, start_hour: 8, end_hour: 18, minute_step: 30, wrap: { all: false }, label: nil %>
    </div>
  </div>
</div>
<div class="field is-horizontal">
  <%= f.label :finish_at %>
  <div class="field-body control">
    <div class="field is-narrow">
      <%= f.date_field 'finish_at(date)', wrap: { input: false, all: false }, label: nil %>
    </div>
    <div class="field is-narrow select">
      <%= f.time_select :finish_at, start_hour: 8, end_hour: 18, minute_step: 30, wrap: { all: false }, label: nil %>
    </div>
  </div>
</div>
