<div class="ui top attached borderless menu">
  <div class="item"><strong>Financial Months</strong></div>
  <%= link_to 'Workday & Holiday', admin_extra_days_path, class: 'item' %>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Financial Month', new_admin_financial_month_path, class: 'ui teal button' %>
    </div>
  </div>
</div>

<div class="ui attached segment">
  <%# render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= FinancialMonth.human_attribute_name(:begin_date) %></th>
      <th><%= FinancialMonth.human_attribute_name(:end_date) %></th>
      <th><%= FinancialMonth.human_attribute_name(:working_days) %></th>
      <th><%= FinancialMonth.human_attribute_name(:color) %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @financial_months.each do |financial_month| %>
    <tr>
      <td><%= financial_month.id %></td>
      <td><%= financial_month.begin_date %></td>
      <td><%= financial_month.end_date %></td>
      <td><%= financial_month.working_days %></td>
      <td>
        <span class="ui label" style="background-color: <%= financial_month.color %>;"><%= financial_month.color %></span>
      </td>
      <td class="ui labels">
        <%= link_to 'Attendance Setting', attendance_setting_admin_financial_month_path(financial_month), method: :patch, data: { confirm: 'Are you sure?' }, class: 'ui blue label' %>
        <%= link_to 'Show', admin_financial_month_path(financial_month), remote: true, class: 'ui blue label' %>
        <%= link_to t('.edit'), edit_admin_financial_month_path(financial_month), class: 'ui pink label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @financial_months %>

<div id="finance_modal"></div>
