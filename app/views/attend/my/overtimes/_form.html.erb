<%= render 'shared/error_messages', target: @overtime %>
<div class="inline fields">
  <%= f.label :start_at %>
  <div class="four wide field">
    <%= f.date_field :'start_at(date)', on: { wrapper_input: false, wrapper_all: false }, label: false, required: true %>
  </div>
  <div class="three wide field">
    <%= f.time_select :start_at, start_hour: 8, end_hour: 18, minute_step: 30, default: { hour: 8, min: 30 } %>
  </div>
</div>
<div class="inline fields">
  <%= f.label :finish_at %>
  <div class="four wide field">
    <%= f.date_field :'finish_at(date)', on: {wrapper_input: false, wrapper_all: false}, label: false, required: true %>
  </div>
  <div class="three wide field">
    <%= f.time_select :finish_at, start_hour: 8, end_hour: 18, minute_step: 30, default: { hour: 17, min: 30 } %>
  </div>
</div>
<%= f.text_field :cc_emails, placeholder: 'Separate emails by ,' %>
<%= f.text_area :note %>
<%= f.submit %>