<div class="ui segment breadcrumb">
  <%= link_to 'Back', my_attendance_settings_path, class: 'section' %>
  <div class="divider"> / </div>
  <div class="active section">Edit</div>
</div>

<div class="ui segment">
  <%= form_with model: @attendance_setting, url: my_attendance_setting_path(@attendance_setting), method: :patch, local: true do |f| %>
    <%= render 'shared/error_messages', target: @attendance_setting %>
    <%= f.select :on_time, options_for_select(AttendanceSetting.time_options, @attendance_setting.on_time) %>
    <%= f.text_field :note %>
    <%= f.submit %>
  <% end %>
</div>
