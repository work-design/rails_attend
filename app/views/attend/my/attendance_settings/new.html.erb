<div class="ui segment breadcrumb">
  <%= link_to 'Back', my_attendance_settings_path, class: 'section' %>
  <div class="divider"> / </div>
  <div class="active section">Add</div>
</div>

<div class="ui segment">
  <%= form_with model: @attendance_setting, url: my_attendance_settings_path, local: true do |f| %>
    <%= render 'shared/error_messages', target: @attendance_setting %>
    <%= f.collection_select :financial_month_id, FinancialMonth.next_all, :id, :date_range %>
    <%= f.select :on_time, options_for_select(AttendanceSetting.time_options, @attendance_setting.on_time) %>
    <%= f.text_field :note %>
    <%= f.submit %>
  <% end %>
</div>
