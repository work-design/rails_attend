<%= render 'shared/error_messages', target: @absence %>
<%= f.select :type, options_for_select(Absence.options_i18n(:type), @absence.type) %>
<div class="field is-horizontal">
  <%= f.label :start_at %>
  <div class="field-body control">
    <%= f.date_field 'start_at(date)', wrap: { input: 'field is-narrow', all: false }, label: nil, required: true %>
    <%= f.time_select :start_at, start_hour: 8, end_hour: 18, minute_step: 30, default: { hour: 8, min: 30 } %>
  </div>
</div>
<div class="field is-horizontal">
  <%= f.label :finish_at %>
  <div class="field is-narrow">
    <%= f.date_field :'finish_at(date)', can: { wrap_input: false, wrap_all: false }, label: false, required: true %>
  </div>
  <div class="field is-narrow">
    <%= f.time_select :finish_at, start_hour: 8, end_hour: 18, minute_step: 30, default: { hour: 17, min: 30 } %>
  </div>
</div>
<% if @absence.type == 'CompensatoryLeave' %>
  <%= f.select :redeeming_days, options_for_select(Absence.available_rest_days, @absence.redeeming_days), { can: { wrap_id: true } }, multiple: true %>
<% else %>
  <div id="absence_redeeming_days_wrapper"></div>
<% end %>
<%= f.text_area :note, required: true %>
<%= f.submit %>
