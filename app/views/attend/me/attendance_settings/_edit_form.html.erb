<%= form_with model: @attendance_setting, url: me_attendance_setting_path(@attendance_setting), method: :patch do |f| %>
  <%= render 'shared/error_messages', target: @attendance_setting %>
  <%= f.select :on_time, options_for_select(AttendanceSetting.time_options, @attendance_setting.on_time) %>
  <%= f.text_field :note %>
  <%= f.submit %>
<% end %>
