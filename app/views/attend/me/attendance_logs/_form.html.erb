<%= form_with model: [:me, @attendance_log] do |f| %>
  <%= render 'shared/error_messages', target: @attendance_log %>
  <div class="inline fields">
    <%= f.label :record_at %>
    <div class="four wide field">
      <%= f.date_field :'record_at(date)', can: { wrap_input: false, wrap_all: false }, label: false %>
    </div>
    <div class="three wide field">
      <%= f.time_select :record_at, start_hour: 8, end_hour: 19 %>
    </div>
  </div>
  <%= f.text_area :note %>
  <%= f.submit %>
<% end %>
