  <a class="menu-label" data-action="menu#toggle">
    <i class="fa-solid fa-fw fa-calendar-alt"></i>
    <span><%= t('attend.admin.title') %></span>
    <i class="fa-solid dropdown"></i>
  </a>
  <div class="menu-list" data-empty-target="content">
    <%= link_to t('attend.admin.financial_months.index.title'), { controller: 'attend/admin/financial_months' }, class: active_helper(controllers: ['financial_months', 'extra_days'], active: 'is-active') %>
    <%= link_to t('attend.admin.attendances.index.title'), { controller: 'attend/admin/attendances' }, class: active_helper(controllers: ['attendances', 'attendance_stats', 'attendance_logs'], active: 'is-active') %>
