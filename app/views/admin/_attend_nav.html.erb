<div class="<%= active_helper(modules: 'attend/admin', active: 'menu ex-accordion is-active', item: 'menu ex-accordion') %>" data-controller="menu">
  <%= content_tag :div, class: 'menu-list' do %>
    <%= link_to t('attend.admin.financial_months.index.title'), admin_financial_months_path, class: active_helper(controllers: ['financial_months', 'extra_days'], active: 'is-active') %>
    <%= link_to t('attend.admin.attendances.index.title'), admin_attendances_path, class: active_helper(controllers: ['attendances', 'attendance_stats', 'attendance_logs'], active: 'is-active') %>
    <%= link_to t('attend.admin.absences.index.title'), admin_absences_path, class: active_helper(controllers: 'absences', active: 'is-active') %>
    <%= link_to t('attend.admin.absence_stats.index.title'), admin_absence_stats_path, class: active_helper(controllers: 'absence_stats', active: 'is-active') %>
    <%= link_to t('attend.admin.overtimes.index.title'), admin_overtimes_path, class: active_helper(controllers: 'overtimes', active: 'is-active') %>
    <%= link_to t('attend.admin.attendance_settings.index.title'), admin_attendance_settings_path, class: active_helper(controllers: 'attendance_settings', active: 'is-active') -%>
  <% end %>
  <a class="menu-label" data-action="menu#toggle">
    <i class="fa-light fa-calendar-alt fa-fw"></i>
    <span><%= t('attend.admin.title') %></span>
    <i class="fa-light dropdown"></i>
  </a>
</div>
