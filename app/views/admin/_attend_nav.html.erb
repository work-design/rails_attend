    <%= link_to t('attend.admin.overtimes.index.title'), { controller: 'attend/admin/overtimes' }, class: active_helper(controllers: 'overtimes', active: 'is-active') %>
    <%= link_to t('attend.admin.attendance_settings.index.title'), { controller: 'attend/admin/attendance_settings' }, class: active_helper(controllers: 'attendance_settings', active: 'is-active') -%>
